
{
  "name": "SnapFox",
  "description": "a skin for Snap on FireFox.",
  "version": "1.5.1",
  "content_scripts": [
    {
      "matches": ["https://snap.berkeley.edu/*"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": ["script.js", "style.css"],
  "browser_action": {
    "default_title": "SnapFox",
    "default_icon": "SnapFox.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "short_name": "SFox"
}
